<div class="container mt-5">
  <div class="wrapper fadeInDown">
  <h2>Esqueceu a senha?</h2>
    <div id="formContent">
      <!-- Login Form -->
      <div class="container mt-4">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class:"fadeIn second", id:"login", placeholder:"email"  } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Reenviar instruções", class:"fadeIn fourth" %>
          </div>
        <% end %>
        <!-- Remind Passowrd -->
        <div id="formFooter">
          <%= render "devise/shared/links", class:"underlineHover" %>
        </div>
      </div>
    </div>
  </div>
</div>
