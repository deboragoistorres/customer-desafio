<div class="container mt-5">
  <div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Login Form -->
      <div class="container mt-4">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class:"fadeIn second", id:"login", placeholder:"email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", id:"password", class:"fadeIn third", placeholder:"senha" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Acessar", class:"fadeIn fourth" %>
          </div>
        <% end %>

        <!-- Remind Passowrd -->
        <div id="formFooter">
          <%= render "devise/shared/links", class:"underlineHover" %>
        </div>
      </div>
    </div>
  </div>
</div>
